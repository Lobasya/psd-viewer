.preview
	flex: 1
	padding: 25px
	display: flex
	align-items: stretch
	justify-content: stretch
	background: #EEE

.preview--layers
	flex: 1
	position: relative
	overflow-x: hidden
	overflow-y: auto

.preview--layers .layer.is-highlighted
	outline: solid thin steelblue
.preview--layers .layer.is-highlighted::after
	content: " "
	position: absolute
	left: 0; top: 0
	width: 100%; height: 100%
	background: rgba(steelblue, .3)
