.preview
	display: flex
	flex: 1
	padding: 25px
	overflow-y: auto
	background: #EEE

.preview--container
	position: relative
	width: 100%

.preview--layers
	position: absolute
	overflow: hidden
	width: 100%
	height: 100%

.preview .layer
	position: absolute

.preview .highlight
	position: absolute
	background: rgba(steelblue, .3)
	outline: solid thin steelblue
	z-index: 10

.preview .highlight--coords
	position: absolute
	transform: translateY(-100%);
	left: -1px;
	z-index: 10
	padding: 5px 12px;
	font-size: .7rem;
	color: white;
	background: rgba(steelblue);
	white-space: nowrap
